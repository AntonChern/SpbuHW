<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import java.lang.Integer?>
<AnchorPane prefHeight="99.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.AntonChernikov.g144.Controller" onMouseMoved="#calculate">
   <children>
      <fx:define>
         <Integer fx:id="min" fx:value="-9999"/>
         <Integer fx:id="max" fx:value="9999"/>
      </fx:define>
      <Label layoutX="235.0" layoutY="40.0" text="=" />
      <Spinner min="$min" max="$max" fx:id="firstOperand" editable="true" layoutX="20.0" layoutY="35.0" onKeyPressed="#calculate" onMouseClicked="#calculate" prefHeight="30.0" prefWidth="70.0"/>
      <Spinner min="$min" max="$max" fx:id="secondOperand" editable="true" layoutX="150.0" layoutY="35.0" onKeyPressed="#calculate" onMouseClicked="#calculate" prefHeight="30.0" prefWidth="70.0" />
      <TextField fx:id="result" editable="false" layoutX="260.0" layoutY="35.0" prefHeight="30.0" prefWidth="80.0" />
      <ChoiceBox fx:id="operator" layoutX="100.0" layoutY="35.0" onAction="#calculate" prefHeight="30.0" prefWidth="40.0" />
   </children>
</AnchorPane>
